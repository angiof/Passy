<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutsheet"
    android:background="#757de8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:padding="5dp">


    <androidx.constraintlayout.motion.widget.MotionLayout

        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E7F3FF"
        app:layoutDescription="@xml/shee_dialog_xml_constraintlayout3_scene">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_red"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginTop="12dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:onClick="onclik"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="@+id/txt_pass"
            app:layout_constraintStart_toStartOf="@+id/txt_pass"
            app:layout_constraintTop_toBottomOf="@+id/txt_pass"
            app:srcCompat="@drawable/cerchio3" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_red2"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/iv_red"
            app:layout_constraintEnd_toStartOf="@+id/iv_red"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_red"
            app:srcCompat="@drawable/cerchia4" />


        <ImageButton
            android:id="@+id/iv_avatar_sheet"
            android:layout_width="179dp"
            android:layout_height="183dp"
            android:layout_marginTop="16dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner"
            app:shapeAppearanceOverlay="@style/roundedImageView"
            tools:visibility="gone">


        </ImageButton>

        <Spinner
            android:id="@+id/spinner"
            android:prompt="@string/spintitle"
            android:background="@drawable/spin"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="wrap_content"
            android:textDirection="firstStrong"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:entries="@array/avatar_password"
            android:scrollbarSize="8dp"
            android:textSize="20sp"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </Spinner>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_loghin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_text_finder"
            app:boxStrokeWidth="8dp"
            app:layout_constraintEnd_toEndOf="@+id/iv_avatar_sheet"
            app:layout_constraintStart_toStartOf="@+id/iv_avatar_sheet"
            app:layout_constraintTop_toBottomOf="@+id/iv_avatar_sheet">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:hint="inserire nick"
                android:textAlignment="center"
                android:textColorHint="#C7BDBD"
                android:textSize="24sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_pass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_text_finder"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="4dp"
            app:circularflow_radiusInDP="4dp"
            app:layout_constraintEnd_toEndOf="@+id/txt_loghin"

            app:layout_constraintStart_toStartOf="@+id/txt_loghin"
            app:layout_constraintTop_toBottomOf="@+id/txt_loghin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_password"
                android:fontFamily="@font/roboto_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="inserire password"
                android:letterSpacing="0.5"
                android:textAlignment="center"
                android:password="true"
                android:textColorHint="#C7BDBD"
                android:textSize="24sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_Green"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:background="@drawable/cerchio"
            android:cropToPadding="false"
            android:onClick="onclick"
            android:paddingHorizontal="0dp"
            android:paddingVertical="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/iv_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_red"
            app:layout_constraintTop_toTopOf="@+id/iv_red"
            app:srcCompat="@drawable/cerchio2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto_bold"
            android:text="save"
            android:textSize="24sp"
            android:textColor="@android:color/darker_gray"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/txt_pass"
            app:layout_constraintStart_toStartOf="@+id/txt_pass"
            app:layout_constraintTop_toBottomOf="@+id/iv_red"
            app:strokeColor="@android:color/darker_gray"
            app:strokeWidth="4dp"
            app:sub_btn_duration="3000" />

    </androidx.constraintlayout.motion.widget.MotionLayout>
</androidx.core.widget.NestedScrollView>
