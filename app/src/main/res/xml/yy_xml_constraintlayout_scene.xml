<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/iv_avatar_sheet" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            motion:layout_constraintEnd_toEndOf="@+id/spinner"
            android:layout_width="359dp"
            android:layout_height="169dp"
            android:visibility="visible"
            motion:layout_constraintTop_toBottomOf="@+id/spinner"
            motion:layout_constraintStart_toStartOf="@+id/spinner"
            android:id="@+id/iv_avatar_sheet"
            motion:layout_editor_absoluteX="23dp" />
    </ConstraintSet>
</MotionScene>